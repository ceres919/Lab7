<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GraphicsEditor.Views.ShapesPages.StraightLineShapePage">

	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="Margin" Value="5,5,0,5"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
		</Style>
		<Style Selector="TextBox, ComboBox">
			<Setter Property="Margin" Value="0,5,2,5"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>
	</UserControl.Styles>

	<Grid ColumnDefinitions="*,*" RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto">
		<TextBlock Text="Имя:" Grid.Column="0" Grid.Row="0"/>
		<TextBox Name="textBoxName" Text="{Binding ShapeName}" Grid.Column="1" Grid.Row="0"/>

		<TextBlock Text="Начальная точка:" Grid.Column="0" Grid.Row="1"/>
		<TextBox Name="textBoxStart" Text="{Binding ShapeStartPoint}" Grid.Column="1" Grid.Row="1"/>

		<TextBlock Text="Конечная точка:" Grid.Column="0" Grid.Row="2"/>
		<TextBox Name="textBoxEnd" Text="{Binding ShapeEndPoint}" Grid.Column="1" Grid.Row="2"/>

		<TextBlock Text="Цвет линии:" Grid.Column="0" Grid.Row="3"/>
		<ComboBox Name="comboBoxColor" Items="{Binding ColoredBrush}" SelectedItem="{Binding ShapeStrokeColor}"
				   Grid.Column="1" Grid.Row="3">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<Rectangle Fill="{Binding }" Width="100" Height="20"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Толщина линии:" Grid.Column="0" Grid.Row="4"/>
		<NumericUpDown Name="numericUpDownStroke" Increment="1" Minimum="1" Maximum="16"
					   Value="{Binding ShapeStrokeThickness}" Grid.Column="1" Grid.Row="4"/>

		<TextBlock Text="Tрансформации фигуры" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" 
				   HorizontalAlignment="Center" FontWeight="Medium" Margin="0,10,0,5"/>

		<TextBlock Text="Угол поворота:" Grid.Column="0" Grid.Row="6"/>
		<TextBox Name="textBoxRenderTransformAngle" Text="{Binding ShapeAngle}" Grid.Column="1" Grid.Row="6"/>

		<TextBlock Text="Центр вращения:" Grid.Column="0" Grid.Row="7"/>
		<TextBox Name="textBoxRotateCenter" Text="{Binding ShapeAngleCenter}" Grid.Column="1" Grid.Row="7"/>

		<TextBlock Text="Масштабирование:" Grid.Column="0" Grid.Row="8"/>
		<TextBox Name="textBoxScaleTransform" Text="{Binding ShapeScaleTransform}" Grid.Column="1" Grid.Row="8"/>

		<TextBlock Text="Наклон вдоль координатных осей:" Grid.Column="0" Grid.Row="9"/>
		<TextBox Name="textBoxSkewTransform" Text="{Binding ShapeSkewTransform}" Grid.Column="1" Grid.Row="9"/>
	</Grid>
</UserControl>
